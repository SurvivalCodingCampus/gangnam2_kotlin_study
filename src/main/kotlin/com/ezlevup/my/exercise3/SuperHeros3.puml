@startuml
'https://plantuml.com/class-diagram

class 진영 {}

class Marvel extends 진영 {

}
class Dc extends 진영 {

}
class Xmen extends 진영 {

}

class Skill {}

abstract class 유닛 implements 힐, 방어막가질수있는 {
    진영: 진영
    타입: 타입
    hp: Int
}

interface 타입 {}
class Human implements 타입 {}
class 강화인간 implements 타입 {}
class 기계 implements 타입 {}



abstract class 시설 extends 유닛 {
}

interface 정보수집할수있는 {
    정보수집한다()
}

interface 수리할수있는 {
    수리한다(기계)
}

interface 공격할수있는 {
    공격한다(유닛)
}

interface 강화받을수있는 {
    강화가능여부(): Boolean
}

interface 강화할수있는 {
    강화한다(강화받을수있는영웅)
}

abstract class 영웅 extends 유닛 implements 공격할수있는, 강화받을수있는 {
    skills: list<Skill>
    공격()
}

interface 힐 {
    받는힐여부() : Boolean
    주는힐(영웅)
    자가치료힐()
}

interface 방어막가질수있는 {
    방어막(타입)
}


' marvel
class Hawkeye extends 영웅 {}
class 블랙위도우 extends 영웅 implements 강화할수있는 {}
class 아이언맨 extends 영웅 {}
class 워머신 extends 영웅 {}
class 자비스 extends 영웅 implements 수리할수있는, 정보수집할수있는 {
}

' dc
class 슈퍼맨 extends 영웅 {}
class 사이보그 extends 영웅 {}

' xman
class 울버린 extends 영웅 {}
class 비스트 extends 영웅 {}

enum 배틀타입 {
    1:1
    팀배틀
}

class GamePlay {
    gameType: 배틀타입
    player : list<Player>
}

class Player {
    num: Int
    teamNum: Int
    진영: 진영
    유닛들: list<유닛>
    팀: map<Int, list<유닛>>
}









@enduml